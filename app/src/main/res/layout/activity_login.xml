<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <com.ww.android.esclub.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:titleLeftIco="@mipmap/arrow_back_normal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/textView"
            android:layout_width="@dimen/wwpx168"
            android:layout_height="@dimen/wwpx138"
            android:background="@mipmap/ic_es"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wwpx20"
            android:text="ES电竞酒吧"
            android:textSize="@dimen/wwpx35"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/ll_weixin_login"
            android:layout_width="@dimen/wwpx400"
            android:layout_height="@dimen/wwpx80"
            android:background="@drawable/btn_white_border_shape"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/wwpx35"
                android:layout_height="@dimen/wwpx35"
                android:layout_marginRight="@dimen/wwpx10"
                android:src="@mipmap/ic_login_weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textSize="@dimen/wwpx28"
            />
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/wwpx25"
            android:layout_width="@dimen/wwpx400"
            android:layout_height="@dimen/wwpx80"
            android:background="@drawable/btn_white_border_shape"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/wwpx45"
                android:layout_height="@dimen/wwpx45"
                android:layout_marginRight="@dimen/wwpx10"
                android:src="@mipmap/ic_login_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textSize="@dimen/wwpx28"
            />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>