<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:paddingTop="@dimen/wwpx10"
                  android:paddingBottom="@dimen/wwpx10"
                  android:paddingRight="@dimen/wwpx21"
                  android:background="@color/color_e1e6eb"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textSize="@dimen/wwpx24"
                  android:textColor="@color/color_323c46"
                  android:text="    全部评论"
                  android:drawableLeft="@mipmap/ic_comment"
                  android:layout_marginLeft="@dimen/wwpx21"
                  android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="match_parent"
                  android:textSize="@dimen/wwpx24"
                  android:textColor="@color/color_323c46"
                  android:text="0条评论"
                  android:gravity="right|center_vertical"
                  android:layout_marginLeft="@dimen/wwpx21"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <include layout="@layout/layout_refresh"/>
</LinearLayout>