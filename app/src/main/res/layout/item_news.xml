<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/wwpx10"
          android:background="@color/color_e1e6eb"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="@dimen/wwpx21"
                  android:background="@color/color_white"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/wwpx258"
            android:layout_height="@dimen/wwpx173"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/wwpx20">
            <TextView style="@style/ContentText"
                      android:ellipsize="end"
                      android:id="@+id/tv_title"
                      android:lines="2"
                      android:text="您可能觉得守望者不好玩，但这样并不是坏事"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wwpx20"
                android:gravity="center_vertical">
                <TextView style="@style/ContentText.ExPlain"
                          android:id="@+id/tv_explain"
                          android:visibility="gone"
                          android:layout_marginRight="@dimen/wwpx10"
                          android:text="竞赛"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="@dimen/wwpx20"
                               android:layout_height="@dimen/wwpx20"
                               android:src="@mipmap/ic_time"/>
                    <TextView style="@style/ContentText.ExPlain"
                              android:id="@+id/tv_time"
                              android:layout_marginLeft="@dimen/wwpx10"
                              android:layout_marginRight="@dimen/wwpx10"
                              android:text="4小时前"
                              android:textColor="@color/color_8c96a0"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical|right"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="@dimen/wwpx24"
                               android:layout_height="@dimen/wwpx24"
                               android:src="@mipmap/ic_read"/>
                    <TextView style="@style/ContentText.ExPlain"
                              android:layout_marginLeft="@dimen/wwpx10"
                              android:layout_marginRight="@dimen/wwpx10"
                              android:text="2067"
                              android:id="@+id/tv_read"
                              android:textColor="@color/color_8c96a0"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>