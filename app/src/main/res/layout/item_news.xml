<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="@dimen/wwpx10"
          android:background="@color/color_e1e6eb"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/wwpx190"
                  android:background="@color/color_white"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:paddingLeft="@dimen/wwpx21">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/wwpx173"
            android:layout_height="@dimen/wwpx173"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="@dimen/wwpx20">
            <TextView
                android:id="@+id/tv_title"
                style="@style/ContentText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wwpx80"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="您可能觉得守望者不好玩，但这样并不是坏事"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wwpx20"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <!--<TextView android:id="@+id/tv_explain"-->
                          <!--style="@style/ContentText.ExPlain"-->
                          <!--android:layout_marginRight="@dimen/wwpx10"-->
                          <!--android:text="竞赛"-->
                          <!--android:visibility="gone"/>-->

                <LinearLayout android:layout_width="0px"
                              android:layout_weight="2"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="@dimen/wwpx20"
                               android:layout_height="@dimen/wwpx20"
                               android:src="@mipmap/ic_time"/>
                    <TextView android:id="@+id/tv_time"
                              style="@style/ContentText.ExPlain"
                              android:layout_marginLeft="@dimen/wwpx10"
                              android:layout_marginRight="@dimen/wwpx10"
                              android:text="2017-06-29 17:17:49"
                              android:textColor="@color/color_8c96a0"/>
                </LinearLayout>

                <LinearLayout android:layout_width="0px"
                              android:layout_weight="1"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="@dimen/wwpx24"
                               android:layout_height="@dimen/wwpx24"
                               android:src="@mipmap/ic_read"/>
                    <TextView android:id="@+id/tv_read"
                              style="@style/ContentText.ExPlain"
                              android:layout_marginLeft="@dimen/wwpx10"
                              android:layout_marginRight="@dimen/wwpx10"
                              android:text="2067"
                              android:textColor="@color/color_8c96a0"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>