<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_shopping_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/wwpx97"
        android:background="@color/color_7914191d"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="@dimen/wwpx300">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wwpx105"
            android:background="@color/color_f5f5f5"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/wwpx21"
            android:paddingRight="@dimen/wwpx21">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3.3"
                android:gravity="center_vertical"
                android:text="es商品袋"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/wwpx28"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_delete"
                android:gravity="center_vertical|right"
                android:text="清空购物车"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/wwpx28"/>

        </LinearLayout>
        <ww.com.core.widget.CustomRecyclerView
            android:id="@+id/crv_shop"
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</merge>