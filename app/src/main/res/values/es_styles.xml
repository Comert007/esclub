<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="TabText">
        <item name="android:textColor">@drawable/tab_name_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/wwpx28</item>
        <item name="android:layout_marginTop">@dimen/wwpx10</item>
    </style>
    <style name="TabImage">
        <item name="android:layout_width">@dimen/wwpx36</item>
        <item name="android:layout_height">@dimen/wwpx36</item>

    </style>


    <style name="LlayFill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/color_f5f5f5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>


    <style name="ContentText">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/wwpx28</item>
    </style>

    <style name="ContentText.ExPlain">
        <item name="android:textColor">@color/color_0b86ee</item>
        <item name="android:textSize">@dimen/wwpx24</item>
    </style>

    <style name="ShareText">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/wwpx24</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="UserText" parent="ShareText">
        <item name="android:textSize">@dimen/wwpx28</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AnimationActivity" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/anim_bottom_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_bottom_exit</item>
    </style>


    <style name="anim_pop_bottom">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_exit</item>
    </style>

    <style name="TipText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wwpx83</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_28323c</item>
    </style>


    <style name="pb_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/pb_horizental</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="UserImage">
        <item name="android:layout_width">@dimen/wwpx40</item>
        <item name="android:layout_height">@dimen/wwpx40</item>
    </style>
    <style name="UserLLay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/wwpx21</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/wwpx21</item>
        <item name="android:layout_height">@dimen/wwpx98</item>
    </style>

    <style name="OrderDetailText" parent="ContentText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/wwpx70</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RightText" parent="OrderDetailText">
        <item name="android:layout_width">0px</item>
        <item name="android:paddingRight">@dimen/wwpx21</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

</resources>